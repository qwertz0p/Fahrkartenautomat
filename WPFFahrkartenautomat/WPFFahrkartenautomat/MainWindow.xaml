                    <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="2" Margin="0,13,0,0" Stroke="Black" VerticalAlignment="Top" Width="119"/>
                    <Label Content="Berlin" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Top" Background="White"/>
                </Grid>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Height="100">
                <Grid x:Name="BC" Margin="37,11,382,19">
                    <Label Content="B" HorizontalAlignment="Left" Margin="41,29,0,0" VerticalAlignment="Top" OpacityMask="#FFE4DBDB" Foreground="White" FontSize="24" FontFamily="Franklin Gothic Medium" RenderTransformOrigin="0.5,0.5" BorderThickness="1" Background="#FF1466F5" Padding="10,5" UseLayoutRounding="True"/>
